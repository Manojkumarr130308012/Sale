<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:layout_width="45dp"
        android:layout_margin="8dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:id="@+id/img_letter_icon"/>

    <TextView
        android:id="@+id/txt_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_letter_icon"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_text_dark"
        android:textAppearance="?attr/textAppearanceListItem" />


    <TextView
        android:id="@+id/txt_customer_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_letter_icon"
        android:layout_below="@+id/txt_customer_name"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_text_light"
        android:textAppearance="?attr/textAppearanceListItemSecondary" />

    <TextView
        android:id="@+id/txt_customer_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_letter_icon"
        android:layout_below="@+id/txt_customer_place"
        android:layout_marginTop="8dp"
        android:textColor="@color/primary_text_light"
        android:textAppearance="?attr/textAppearanceListItemSecondary" />


    <TextView
        android:id="@+id/txt_customer_os_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_letter_icon"
        android:layout_below="@+id/txt_customer_number"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold|italic"
        android:textColor="@color/primary_text_light"
        android:textAppearance="?attr/textAppearanceListItemSecondary" />
</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:background="@color/divider"
    android:layout_height="0.2dp"></View>
    </LinearLayout>
</androidx.cardview.widget.CardView>